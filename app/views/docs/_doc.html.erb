<div class='doc_item'>
  <span class='name'>
    <h3><%= link_to doc.name, doc_path(doc) %></h3>
  </span>
  <span class='tags'>
    <i class="glyphicon glyphicon-tag"></i>
    <%= generate_tag_list(doc.tags).html_safe %>
  </span>
  <p class='excerpt'><%= excerpt_from(doc.content, doc_path(doc)) %></p>
  <p class='doc_details'>Created 6 months ago by Martin Goldman &bull; Last modified 6 months ago by Martin Goldman</p>
</div>