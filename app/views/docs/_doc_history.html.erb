<div id='doc_history'>
  <h4>History</h4>
  <table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Version</th>
      <th>Date/Time</th>
      <th>User</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% doc.history_tracks.sort_by {|ht| -ht.version}.each do |history_track| %>
      <tr>
        <td><%= link_to history_track.version, doc_history_track_path(doc, history_track.version) %></td>
        <td><%= history_track.created_at %></td>
        <td><%= history_track.modifier.name %></td>
        <td><%= history_track.action %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>